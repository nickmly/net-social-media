@model Social.Comment

@{
    ViewBag.Title = "Edit";
}
<div class="container">
    @using (Html.BeginForm("Edit", "Comments", null, FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div>
            <h4>Edit Comment</h4>
            @Html.ValidationSummary(true, "", new { @class = "error-message" })
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.AuthorID)
            @Html.HiddenFor(model => model.AuthorName)
            @Html.HiddenFor(model => model.PostID)

            <div>
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="field">
                    @Html.EditorFor(model => model.Content)
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "warning-message" })
                </div>
            </div>

            <div>
                <div>
                    <input type="submit" value="Save" class="btn" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
